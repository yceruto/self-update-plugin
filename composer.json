{
    "name": "yceruto/self-update-plugin",
    "description": "A Composer plugin for self-updating the project codebase",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "yonelceruto@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Yceruto\\SelfUpdatePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yceruto\\SelfUpdatePlugin\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Yceruto\\SelfUpdatePlugin\\ComposerPlugin"
    }
}
